    <style>
        /* Custom Styles */
        .curve-bottom {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            overflow: hidden;
            line-height: 0;
            transform: rotate(180deg);
        }

        .curve-bottom svg {
            position: relative;
            display: block;
            width: calc(100% + 1.3px);
            height: 80px;
        }

        .curve-bottom .shape-fill {
            fill: #ffffff;
        }

        /* FAQ Accordion Transition */
        .faq-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-out;
        }
        .faq-item.active .faq-content {
            max-height: 500px;
        }
        .faq-item.active i {
            transform: rotate(180deg);
        }

        /* --- Swiper Slider Styles --- */
        .swiper {
            width: 100%;
            padding-top: 50px;
            padding-bottom: 50px;
        }

        .swiper-slide {
            background-position: center;
            background-size: cover;
            width: 300px;
            height: auto;
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.3s ease;
            /* Shadow for depth */
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        }

        /* Make active slide larger */
        .swiper-slide-active {
            transform: scale(1.2);
            z-index: 10;
            border: 2px solid #46a034; /* Green border for active item */
        }

        @media (min-width: 768px) {
            .swiper-slide {
                width: 600px; /* Wider slides on desktop */
            }
        }

        /* Navigation Buttons */
        .slider-nav-btn {
            background-color: #46a034; /* Your Green Brand Color */
            color: white;
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            box-shadow: 0 4px 14px rgba(70, 160, 52, 0.4);
            z-index: 20;
            cursor: pointer;
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
        }

        .slider-nav-btn:hover {
            background-color: #3a852b;
            transform: translateY(-50%) scale(1.1);
        }

        .slider-prev { right: 20px; } /* Arabic RTL positioning */
        .slider-next { left: 20px; }

        /* Hide default Swiper arrows */
        .swiper-button-next::after, .swiper-button-prev::after {
            display: none;
        }
