    <script>
        // Initialize Swiper for Portfolio
        const swiper = new Swiper('.portfolio-slider', {
            // Parameters
            effect: 'coverflow', // 3D Effect
            grabCursor: true,
            centeredSlides: true,
            slidesPerView: 'auto', // Adjust based on width
            initialSlide: 1,
            loop: true,
            spaceBetween: 30,
            
            // Responsive Breakpoints
            breakpoints: {
                320: {
                    slidesPerView: 1.3,
                    spaceBetween: 20
                },
                768: {
                    slidesPerView: 2.5,
                    spaceBetween: 30
                },
                1024: {
                    slidesPerView: 3.5,
                    spaceBetween: 40
                }
            },

            // Coverflow Effect Settings
            coverflowEffect: {
                rotate: 0,
                stretch: 0,
                depth: 200,
                modifier: 1,
                slideShadows: false,
            },

            // Navigation arrows
            navigation: {
                nextEl: '.slider-next',
                prevEl: '.slider-prev',
            },
        });

        // FAQ Toggle Function
        function toggleFaq(button) {
            const item = button.parentElement;
            const isActive = item.classList.contains('active');
            
            // Close all others
            document.querySelectorAll('.faq-item').forEach(el => {
                el.classList.remove('active');
            });

            // Toggle current
            if (!isActive) {
                item.classList.add('active');
            }
        }
    </script>
